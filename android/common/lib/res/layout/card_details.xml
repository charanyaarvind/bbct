<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/scroll_card_details"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout 
        		  android:layout_width="wrap_content"
        		  android:layout_height="wrap_content"
        		  android:orientation="vertical"
        		  >
    <LinearLayout 
        		  android:layout_width="fill_parent"
        		  android:layout_height="wrap_content"
        		  android:orientation="horizontal"
        		  android:paddingBottom="4sp"
        		  >
        <ImageView android:id="@id/image_card_details_front"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/no_card_image"
                android:contentDescription="@string/image_front_desc"
                android:adjustViewBounds="true"
        />
        <ImageView android:id="@id/image_card_details_back"
            	android:layout_width="0dp"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
                android:src="@drawable/no_card_image"
                android:contentDescription="@string/image_back_desc"
                android:adjustViewBounds="true"
         />
    </LinearLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1"
    >
    <TableRow>
        <TextView android:text="@string/brand_label"
                  android:textStyle="bold"
        />
        <AutoCompleteTextView android:id="@id/brand_text"
                              android:singleLine="true"
                              android:inputType="textCapWords"
                              android:hint="@string/brand_hint"
                              android:completionThreshold="1"
                              android:selectAllOnFocus="true"
        />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/year_label"
                  android:textStyle="bold"
        />
        <EditText android:id="@id/year_text"
                  android:singleLine="true"
                  android:inputType="number"
                  android:hint="@string/year_hint"
                  android:selectAllOnFocus="true"
        />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/number_label"
                  android:textStyle="bold"
        />
        <EditText android:id="@id/number_text"
                  android:singleLine="true"
                  android:inputType="number"
                  android:hint="@string/number_hint"
                  android:selectAllOnFocus="true"
        />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/value_label"
                  android:textStyle="bold"
        />
        <EditText android:id="@id/value_text"
                  android:singleLine="true"
                  android:inputType="numberDecimal"
                  android:hint="@string/value_hint"
                  android:selectAllOnFocus="true"
        />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/count_label"
                  android:textStyle="bold"
        />
        <EditText android:id="@id/count_text"
                  android:singleLine="true"
                  android:inputType="number"
                  android:hint="@string/count_hint"
                  android:selectAllOnFocus="true"
        />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/player_name_label"
                  android:textStyle="bold"
        />
        <AutoCompleteTextView android:id="@id/player_name_text"
                              android:singleLine="true"
                              android:inputType="textCapWords"
                              android:hint="@string/player_name_hint"
                              android:completionThreshold="1"
                              android:selectAllOnFocus="true"
        />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/team_label"
                  android:textStyle="bold"
        />
        <AutoCompleteTextView android:id="@id/team_text"
                              android:singleLine="true"
                              android:inputType="textCapWords"
                              android:hint="@string/team_hint"
                              android:completionThreshold="1"
                              android:selectAllOnFocus="true"
        />
    </TableRow>
    <TableRow>
        <TextView android:text="@string/player_position_label"
                  android:textStyle="bold"
        />
        <Spinner android:id="@id/player_position_text"
                 android:singleLine="true"
                 android:hint="@string/player_position_hint"
        />
    </TableRow>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <Button android:id="@id/save_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save_button"
        />
        <Button android:id="@id/done_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/done_button"
        />
    </LinearLayout>
    </TableLayout>
    </LinearLayout>
</ScrollView>